<UserControl x:Class="PokeroleUI2.Controls.SimpleStatSliderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokeroleUI2"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="160">
    <Grid>

        <local:VerticalContentBlock x:Name="contentBlock" Tag="Tag" Background="{StaticResource Col_LightBlack}">
            <Slider x:Name="SimpleStatSlider" Minimum="0" Maximum="0" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="100"  IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="Slider_ValueChanged"/>
        </local:VerticalContentBlock>

    </Grid>
</UserControl>
