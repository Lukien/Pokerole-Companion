<UserControl x:Class="PokeroleUI2.Controls.SimpleStatSliderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokeroleUI2"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="160">
    <Grid>

        <Slider x:Name="SimpleStatSlider" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Bottom" Width="140" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="Slider_ValueChanged"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap"  FontFamily="SquareFont" FontSize="12" VerticalAlignment="Top">
            <Run x:Name="textTitle" Text="Stat"/>
            <Run Text=":"/>
            <Run x:Name="textValue" Text="5"/>
        </TextBlock>

    </Grid>
</UserControl>
