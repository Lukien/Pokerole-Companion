<UserControl x:Class="PokeroleUI2.Controls.dexLearnsetDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:uc="clr-namespace:PokeroleUI2.Controls"
             xmlns:local="clr-namespace:PokeroleUI2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="MoveGrid" Margin="0,0,0,0" IsReadOnly="True" AlternatingRowBackground="AliceBlue" SelectionChanged="MoveGrid_SelectionChanged" AutoGenerateColumns="False">
            <DataGrid.Columns>
                    <DataGridTextColumn x:Name ="columnRank" Binding ="{Binding Path=RankString}" Header="Rank"/>
                    <DataGridTextColumn x:Name ="columnType" Binding ="{Binding Path=Type}" Header="Type"/>
                    <DataGridTextColumn x:Name ="columnName" Binding ="{Binding Path=Name}" Header="Name"/>
            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</UserControl>
