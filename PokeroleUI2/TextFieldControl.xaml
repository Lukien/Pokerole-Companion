<UserControl x:Class="PokeroleUI2.Controls.TextFieldControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokeroleUI2"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="180"
             DataContext = "{Binding RelativeSource={RelativeSource Self}}"
             >
    <Grid>

        <TextBlock x:Name="textTitle" Margin="0,0,0,0" TextWrapping="Wrap" Text="{Binding Path=StringStat.tag, Mode=TwoWay}" FontFamily="SquareFont" FontSize="12" VerticalAlignment="Top" TextAlignment="Center"/>
        <TextBox x:Name="textBoxValue" HorizontalAlignment="Center" Height="16" Margin="5,0,5,0" TextWrapping="Wrap" Text="{Binding Path=StringStat.value, Mode=TwoWay}" VerticalAlignment="Bottom" Width="180" TextAlignment="Center" BorderBrush="Black" TextChanged="TextBoxValue_TextChanged"/>


    </Grid>
</UserControl>
