<UserControl x:Class="PokeroleUI2.Controls.RankControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokeroleUI2"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="200">
    <Grid HorizontalAlignment="Center">
        <WrapPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0,5,0" Width="Auto">
                <Button VerticalAlignment="Center" x:Name="decreaseButton" Content="-" FontSize="8" Width="11" Height="11" Margin="0,0,0,0" Grid.Column="1" Click="DecreaseButton_Click"/>
                <Image x:Name="imageRank" Height="15" Width="15"/>
                <TextBlock  x:Name="textRank" Margin="0,0,0,0" FontSize="10" TextWrapping="Wrap" TextAlignment="Center" FontFamily="{StaticResource Bliss}" VerticalAlignment="Center"/>
                <Button VerticalAlignment="Center" x:Name="increaseButton" Content="+" FontSize="8" Width="11" Height="11" Margin="0,0,0,0" Grid.Column="3" Click="IncreaseButton_Click"/>
            </WrapPanel>
    </Grid>
</UserControl>
