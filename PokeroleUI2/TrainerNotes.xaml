<UserControl x:Class="PokeroleUI2.Controls.TrainerNotes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokeroleUI2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext = "{Binding RelativeSource={RelativeSource Self}}"
             FontFamily="Trebuchet MS"
             >
    <Grid>
        <local:VerticalContentBlock Tag="Notes">
            <TextBox Text="{Binding TrainerData.Notes, Mode=TwoWay}" AcceptsReturn="True" TextWrapping="Wrap"/>
        </local:VerticalContentBlock>
    </Grid>
</UserControl>
